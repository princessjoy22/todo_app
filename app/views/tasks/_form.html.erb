<%= stylesheet_link_tag "form" %>

<%= form_with model: @task do |form| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="input">
    <div class="about">
      <h5>About</h5>
      <%= form.text_field :task_name, class: "about-field", autocomplete: 'off' %>
    </div>

    <div class="description">
      <h5>Description</h5>
      <%= form.text_field :body, class: "description-field", autocomplete: 'off' %>
    </div>
  </div>

  <div class="button-align">  
    <div class="buttons">
        <%= form.submit 'ADD', class: "new-btn" %>
    </div>
    <span>|</span>    
    <div class="buttons">
        <%= link_to "RETURN", tasks_path, class: "btn" %>
    </div>
  </div>
<% end %>
